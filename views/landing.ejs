    <script>
        // Enhanced form validation and submission
        class LandingPageManager {
            constructor() {
                this.initializeEventListeners();
                this.initializeNotifications();
            }
            
            initializeEventListeners() {
                // Join Room Form
                document.getElementById('joinRoomForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.joinRoom();
                });
                
                // Create Room Form
                document.getElementById('createRoomForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.createRoom();
                });
                
                // Quick Play
                document.getElementById('quickPlayBtn').addEventListener('click', () => {
                    this.quickPlay();
                });
                
                // Help Modal
                document.getElementById('helpBtn').addEventListener('click', () => {
                    this.showHelpModal();
                });
                
                document.getElementById('closeHelpBtn').addEventListener('click', () => {
                    this.hideHelpModal();
                });
                
                // Modal backdrop click
                document.getElementById('helpModal').addEventListener('click', (e) => {
                    if (e.target.id === 'helpModal') {
                        this.hideHelpModal();
                    }
                });
                
                // Escape key handling
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape') {
                        this.hideHelpModal();
                    }
                });
                
                // Input formatting
                const roomInput = document.getElementById('roomInput');
                const newRoomInput = document.getElementById('newRoomInput');
                
                [roomInput, newRoomInput].forEach(input => {
                    input.addEventListener('input', (e) => {
                        // Remove invalid characters
                        e.target.value = e.target.value.replace(/[^a-zA-Z0-9]/g, '');
                    });
                });
            }
            
            initializeNotifications() {
                this.notificationQueue = [];
                this.isShowingNotification = false;
            }
            
            joinRoom() {
                const roomInput = document.getElementById('roomInput');
                const roomId = roomInput.value.trim().toUpperCase();
                
                if (!roomId) {
                    this.showNotification('‚ö†Ô∏è', 'Please enter a room ID', 'Room ID cannot be empty');
                    roomInput.focus();
                    return;
                }
                
                if (roomId.length < 3) {
                    this.showNotification('‚ö†Ô∏è', 'Room ID too short', 'Room ID must be at least 3 characters');
                    roomInput.focus();
                    return;
                }
                
                // Validate room ID format
                if (!/^[A-Z0-9\-]{3,12}$/.test(roomId)) {
                    this.showNotification('‚ö†Ô∏è', 'Invalid room ID format', 'Use only letters, numbers, and hyphens');
                    roomInput.focus();
                    return;
                }
                
                this.showNotification('üîÑ', 'Joining room...', `Connecting to room: ${roomId}`);
                
                // Redirect to game with proper query parameters
                setTimeout(() => {
                    window.location.href = `/game?room=${encodeURIComponent(roomId)}&role=white`;
                }, 1000);
            }
            
            createRoom() {
                const newRoomInput = document.getElementById('newRoomInput');
                const customRoomId = newRoomInput.value.trim().toUpperCase();
                
                if (customRoomId && customRoomId.length < 3) {
                    this.showNotification('‚ö†Ô∏è', 'Room ID too short', 'Custom room ID must be at least 3 characters');
                    newRoomInput.focus();
                    return;
                }
                
                // Validate custom room ID format if provided
                if (customRoomId && !/^[A-Z0-9\-]{3,12}$/.test(customRoomId)) {
                    this.showNotification('‚ö†Ô∏è', 'Invalid room ID format', 'Use only letters, numbers, and hyphens');
                    newRoomInput.focus();
                    return;
                }
                
                const roomId = customRoomId || this.generateRandomRoomId();
                
                this.showNotification('‚ú®', 'Creating room...', `Setting up room: ${roomId}`);
                
                // Redirect to game with proper query parameters
                setTimeout(() => {
                    window.location.href = `/game?room=${encodeURIComponent(roomId)}&role=white`;
                }, 1000);
            }
            
            quickPlay() {
                const roomId = this.generateRandomRoomId();
                this.showNotification('‚ö°', 'Quick Play started!', `Generated room: ${roomId}`);
                
                setTimeout(() => {
                    window.location.href = `/game?room=${encodeURIComponent(roomId)}&role=white`;
                }, 1000);
            }
            
            generateRandomRoomId() {
                const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
                let result = '';
                for (let i = 0; i < 6; i++) {
                    result += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                return result;
            }
            
            showNotification(icon, text, subtext = '') {
                const notification = {
                    icon,
                    text,
                    subtext,
                    timestamp: Date.now()
                };
                
                this.notificationQueue.push(notification);
                
                if (!this.isShowingNotification) {
                    this.displayNextNotification();
                }
            }
            
            displayNextNotification() {
                if (this.notificationQueue.length === 0) {
                    this.isShowingNotification = false;
                    return;
                }
                
                this.isShowingNotification = true;
                const notification = this.notificationQueue.shift();
                
                const toast = document.getElementById('notificationToast');
                const icon = document.getElementById('notificationIcon');
                const text = document.getElementById('notificationText');
                const subtext = document.getElementById('notificationSubtext');
                
                icon.textContent = notification.icon;
                text.textContent = notification.text;
                subtext.textContent = notification.subtext;
                
                // Show notification
                toast.style.transform = 'translateX(0)';
                
                // Hide notification after 4 seconds
                setTimeout(() => {
                    toast.style.transform = 'translateX(100%)';
                    
                    // Show next notification after transition
                    setTimeout(() => {
                        this.displayNextNotification();
                    }, 300);
                }, 4000);
            }
            
            showHelpModal() {
                document.getElementById('helpModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
            
            hideHelpModal() {
                document.getElementById('helpModal').classList.add('hidden');
                document.body.style.overflow = 'auto';
            }
        }
        
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new LandingPageManager();
