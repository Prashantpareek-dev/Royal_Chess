                    reject();
                };
                document.head.appendChild(script);
            });
        }
        
        // Method 3: Try unpkg CDN
        function loadChessFallback2() {
            return new Promise((resolve, reject) => {
                const script = document.createElement('script');
                script.src = 'https://unpkg.com/chess.js@1.4.0/dist/chess.min.js';
                script.onload = () => {
                    console.log('‚úÖ Chess.js from unpkg loaded successfully');
                    resolve();
                };
                script.onerror = () => {
                    console.warn('‚ùå All CDN sources failed, trying local fallback...');
                    reject();
                };
                document.head.appendChild(script);
            });
        }
        
        // Method 4: Local inline minimal chess implementation as last resort
        function createMinimalChess() {
            console.log('üöë Creating minimal chess fallback...');
            window.Chess = function() {
                const initialFen = 'rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1';
                let currentFen = initialFen;
                
                // Piece symbols mapping
                const pieces = {
                    'r': '‚ôú', 'n': '‚ôû', 'b': '‚ôù', 'q': '‚ôõ', 'k': '‚ôö', 'p': '‚ôü',
                    'R': '‚ôñ', 'N': '‚ôò', 'B': '‚ôó', 'Q': '‚ôï', 'K': '‚ôî', 'P': '‚ôô'
                };
                
                return {
                    board: function() {
                        const board = Array(8).fill(null).map(() => Array(8).fill(null));
                        const fenParts = currentFen.split(' ');
                        const position = fenParts[0];
                        const ranks = position.split('/');
                        
                        for (let rank = 0; rank < 8; rank++) {
                            let file = 0;
                            for (let char of ranks[rank]) {
                                if (isNaN(char)) {
                                    board[rank][file] = {
                                        type: char.toLowerCase(),
                                        color: char === char.toUpperCase() ? 'w' : 'b'
                                    };
                                    file++;
                                } else {
                                    file += parseInt(char);
                                }
                            }
                        }
                        return board;
                    },
                    turn: function() {
                        return currentFen.split(' ')[1];
                    },
                    reset: function() {
                        currentFen = initialFen;
                    },
                    fen: function() {
                        return currentFen;
                    },
                    move: function(move) {
                        // Simplified move validation - always return true for fallback
                        console.log('Fallback move attempted:', move);
                        return { from: move.from, to: move.to };
                    },
                    moves: function() {
                        return []; // Simplified - return empty for fallback
                    }
                };
            };
            console.log('‚úÖ Minimal chess fallback created');
        }
        
        // Try loading with cascading fallbacks
        async function initializeChessLibrary() {
            try {
                await loadChessLibrary();
            } catch {
                try {
                    await loadChessFallback1();
                } catch {
                    try {
                        await loadChessFallback2();
                    } catch {
                        createMinimalChess();
                    }
